@model Ihc.Models.Formulario

@{
    ViewData["Title"] = "Borrar Formulario";
}

<h1>Borrar Formulario</h1>

<h3>¿Desea borrar este formulario?</h3>
<div>
    <h4>Formulario</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NombreFormulario)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NombreFormulario)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CodigoFormulario)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CodigoFormulario)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Archivo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Archivo)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Regresar a la lista de Formularios</a>
    </form>
</div>
