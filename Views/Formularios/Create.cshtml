@model Ihc.Models.Formulario

@{
    ViewData["Title"] = "Crear Formulario";
}

<h1>Crear Nuevo Formulario</h1>

<h4>Formulario</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NombreFormulario" class="control-label"></label>
                <input asp-for="NombreFormulario" class="form-control" />
                <span asp-validation-for="NombreFormulario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CodigoFormulario" class="control-label"></label>
                <input asp-for="CodigoFormulario" class="form-control" />
                <span asp-validation-for="CodigoFormulario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Archivo" class="control-label"></label>
                <input type="file" accept="image/jpeg,image/gif,image/png,application/pdf,image/x-eps" asp-for="Archivo" class="form-control" />
                <span asp-validation-for="Archivo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Regresar a la lista de Formularios</a>
</div>

